# Example Terraform variables file
# Copy this to terraform.tfvars and update with your actual values

project_id   = "your-gcp-project-id"
region       = "us-central1"
cluster_name = "red-cluster"
vpc_name     = "red-vpc"
subnet_name  = "red-subnet"
subnet_cidr  = "10.0.0.0/20"
pod_cidr     = "172.16.0.0/14"
service_cidr = "172.20.0.0/20"

# GitHub repositories for Workload Identity Federation
# Add all repositories that should have access to deploy infrastructure
github_repositories = [
  "infra-red-org/red-infrastructure-gitops"
]

# Workload Identity Configuration
workload_identity_pool_id = "red-gitops-pool"
service_account_id        = "red-gitops-sa"

# Git Repository Configuration
git_repository_url = "https://github.com/infra-red-org/red-infrastructure-gitops"